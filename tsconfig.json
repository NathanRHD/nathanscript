{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "importHelpers": true,
        "isolatedModules": false,
        "jsx": "react",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "sourceMap": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": false,
        "noImplicitAny": true,
        "outDir": "./distribution",
        "lib": [
            "es2015",
            "es5",
            "dom"
        ]
    }
}